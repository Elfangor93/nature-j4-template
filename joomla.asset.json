{
  "$schema": "https://developer.joomla.org/schemas/json-schema/web_assets.json",
  "name": "nature",
  "version": "4.0.0",
  "description": "This file contains details of the assets used by Cassiopeia, the default Joomla 4 site template.",
  "license": "GPL-2.0-or-later",
  "assets": [
    {
      "name": "template.nature",
      "description": "The css file to be used.",
      "type": "style",
      "uri": "template.css",
      "dependencies": [
        "template.reset",
        "template.layout",
        "template.menu",
        "template.content",
        "template.modal",
        "template.print"
      ]
    },
    {
      "name": "template.reset",
      "description": "CSS reset.",
      "type": "style",
      "uri": "reset.css"
    },
    {
      "name": "template.layout",
      "description": "CSS for layout.",
      "type": "style",
      "uri": "layout.css"
    },
    {
      "name": "template.menu",
      "description": "CSS for menu.",
      "type": "style",
      "uri": "menu.css"
    },
    {
      "name": "template.content",
      "description": "CSS for content.",
      "type": "style",
      "uri": "content.css"
    },
    {
      "name": "template.modal",
      "description": "CSS for modal.",
      "type": "style",
      "uri": "modal.css"
    },
    {
      "name": "template.print",
      "description": "CSS for print.",
      "type": "style",
      "uri": "print.css"
    },
    {
      "name": "template.offline",
      "description": "The css file to be used when the site is offline and offline.php is being used.",
      "type": "style",
      "uri": "offline.css"
    },
    {
      "name": "template.user",
      "description": "A file where a user can add their own css.",
      "type": "style",
      "uri": "user.css",
      "dependencies": [
        "template.nature"
      ]
    },
    {
      "name": "template.nature",
      "description": "The file containing the javascript for this template.",
      "type": "script",
      "uri": "template.js",
      "dependencies": [
        "core"
      ]
    },
    {
      "name": "template.user",
      "description": "The name of a file where a user can add their own javascript",
      "type": "script",
      "uri":  "user.js",
      "dependencies": [
        "template.nature"
      ]
    },
    {
      "name": "template.nature",
      "type": "preset",
      "dependencies": [
        "template.nature#style",
        "template.nature#script"
      ]
    },
    {
      "name": "searchtools",
      "type": "style",
      "uri": "system/searchtools/searchtools.min.css"
    },
    {
      "name": "fontawesome",
      "type": "style",
      "uri": "media/system/css/joomla-fontawesome.min.css"
    }

  ]
}
